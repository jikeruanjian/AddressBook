<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kevin.addressBook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/phonebook"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kevin.addressBook.ui.WelcomeActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenLayout"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kevin.addressBook.ui.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kevin.addressBook.ui.MainDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kevin.addressBook.ui.MainAddActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.kevin.addressBook.ui.MainEditActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>